{
	// * eCSStractor
	"ecsstractor_port.bem_nesting": true,
	"ecsstractor_port.empty_line_before_nested_selector": true,
	"ecsstractor_port.add_comment": false,
	"ecsstractor_port.indentation": " ",
	"ecsstractor_port.modifier_separator": "--",

	// * Пути для плагина
	"path-autocomplete.pathMappings": {
		"@img": "${folder}/assets/resources/img",
		"@scss": "${folder}/assets/scss",
		"@js": "${folder}/assets/js"
	},

	// * Настройки значков для темы
	"workbench.iconTheme": "material-icon-theme",
	"material-icon-theme.files.associations": {
		"*.htmlhintrc": "settings"
	},
	"material-icon-theme.folders.associations": {
		"chunk": "middleware",
		"files": "queue",
		"favicon": "environment",
		"mixins": "sass"
	},

	// * Настройки для Stylelint
	"css.validate": false,
	"scss.validate": false,
	"stylelint.validate": [
		"scss"
	],
}
